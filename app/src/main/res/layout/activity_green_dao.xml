<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.function.luo.collection.MainActivity">

    <Button
        android:id="@+id/btn_query"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="greenDao查询"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="greenDao增加"
        />

    <Button
        android:id="@+id/btn_update"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="greenDao修改"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="greenDao删除"
        />



   <RelativeLayout
       android:layout_marginLeft="8dp"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/tv_name_tag"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="用户名:"
           />


       <TextView
           android:layout_marginLeft="8dp"
           android:layout_toRightOf="@+id/tv_name_tag"
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           />
   </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_age_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄:"
            />


        <TextView
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tv_age_tag"
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
    </RelativeLayout>
</LinearLayout>
